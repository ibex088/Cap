{
  "manifest_version": 3,
  "name": "Cap - Screen Recorder",
  "version": "1.0.0",
  "description": "Record your screen, tab, or camera instantly with Cap",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "offscreen",
    "desktopCapture"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "src/assets/icons/icon-16.png",
      "32": "src/assets/icons/icon-32.png",
      "48": "src/assets/icons/icon-48.png",
      "128": "src/assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "src/assets/icons/icon-16.png",
    "32": "src/assets/icons/icon-32.png",
    "48": "src/assets/icons/icon-48.png",
    "128": "src/assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/recorder-overlay/overlay-injector.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/offscreen/offscreen.html",
        "src/recorder-page/recorder-page.html",
        "src/recorder-page/recorder-page-init.js",
        "src/shared/recorder.css",
        "src/shared/recorder-controller.js",
        "src/shared/camera-preview.css",
        "src/shared/camera-preview.js",
        "src/recorder-overlay/recorder-overlay.html",
        "src/recorder-overlay/recorder-overlay-init.js",
        "src/assets/icons/icon-48.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "start-recording": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Start/stop recording"
    }
  }
}
